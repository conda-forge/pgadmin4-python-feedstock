+// Polyfill for React's experimental useEffectEvent
+// which is used by react-data-grid but doesn't exist in React 18 or 19
+import * as React from 'react';
+
+// Polyfill useEffectEvent using useCallback with empty deps
+// This is the recommended workaround from React team
+function useEffectEvent(fn) {
+  const ref = React.useRef(fn);
+  React.useLayoutEffect(() => {
+    ref.current = fn;
+  });
+  return React.useCallback((...args) => ref.current(...args), []);
+}
+
+export * from 'react';
+export { useEffectEvent };
